<div class="container">
  <h1>List of gadgets</h1>
  <br>

  <div style="width: 100%; height: 400px;"
    data-controller="mapbox"
    data-mapbox-markers-value="<%= @markers.to_json %>"
    data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <br>

  <div class="cards">
    <% @gadgets.each do |gadget| %>
      <%= link_to gadget_path(gadget), class: "card" do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
          <%= gadget.name %>

          <div class="card-details">
            <%= gadget.description %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
        <%# <%= render "gadgets/photo", photo: gadget.photo %> %>
</div>
