<h2 class="mt-3">Explore your neighbours' cabinets:</h2>
<div class="main-container">
  <br>

  <div class="cards">
    <% @gadgets.each do |gadget| %>
      <%= link_to gadget_path(gadget), class: "card" do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= omni_image_path gadget.photo, height: 600, width: 800, crop: :fill, class: "img-fluid" %>')"
        >
          <%= gadget.name %>

          <div class="card-details p-3">
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <div id="map"
    data-controller="mapbox"
    data-mapbox-markers-value="<%= @markers.to_json %>"
    data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
        <%# <%= render "gadgets/photo", photo: gadget.photo %>
</div>
