<div class="container mb-3">
  <h1 class="border-bottom"><%= @gadget.name  %></h1>
  <div class="row justify-content-center">
    <div class="col-12 col-lg-8">
      <%= omni_image_tag @gadget.photo, height: 600, width: 800, crop: :fill, class: "img-fluid" %>
      <br>
    </div>
    <div class="col-12 col-lg-4">
      <p>
        <i class="fas fa-map-pin"></i>
        <%= @gadget.address %>
        <div style="width: 70%; height: 200px;"
          data-controller="mapbox"
          data-mapbox-markers-value="<%= @markers.to_json %>"
          data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </p>
      <p><%= @gadget.description  %></p>
      <hr>
      <%= render "bookings/form_new_booking", gadget: @gadget, booking: @booking %>
    </div>
  </div>
</div>
